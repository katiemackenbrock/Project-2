<h1>Profile Page</h1>

<h2>Welcome to your PROFILE <%= currentUser.name %> </h2>

<h3>My Favorites</h3>

<p>I have <%= drinks.length %> favorites!</p>

<% drinks.forEach(drink => { %>
    <div class="fav">
        <h3>
            <a href="/favorites/<%= drink.name %>">
                <%= drink.name %>
            </a>
        </h3>
        <form method="POST" action="/favorites/{{favCocktail._id}}?_method=DELETE">
            <button type="submit">Delete</button>
        </form>
    </div>
<% }); %>